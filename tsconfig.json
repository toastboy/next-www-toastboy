{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "diagnostics": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "actions/*": [
        "./src/actions/*"
      ],
      "api/*": [
        "./src/app/api/*"
      ],
      "components/*": [
        "./src/components/*"
      ],
      "environment/*": [
        "./src/environments/*"
      ],
      "lib/*": [
        "./src/lib/*"
      ],
      "services/*": [
        "./src/services/*"
      ],
      "tests/*": [
        "./tests/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "types": [
      "@types/jest",
      "@testing-library/jest-dom"
    ]
  },
  "exclude": [
    "node_modules",
    ".next",
    ".eslintrc.js"
  ],
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ]
}
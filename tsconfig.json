{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "diagnostics": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "paths": {
      "actions/*": [
        "./src/actions/*"
      ],
      "api/*": [
        "./src/app/api/*"
      ],
      "components/*": [
        "./src/components/*"
      ],
      "environment/*": [
        "./src/environments/*"
      ],
      "lib/*": [
        "./src/lib/*"
      ],
      "mocks/*": [
        "./src/mocks/*"
      ],
      "prisma/*": [
        "./prisma/*"
      ],
      "services/*": [
        "./src/services/*"
      ],
      "tests/*": [
        "./tests/*"
      ],
      "types/*": [
        "./src/types/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "types": [
      "node",
    ]
  },
  "exclude": [
    ".eslintrc.js",
    ".next",
    "node_modules"
  ],
  "include": [
    ".next/types/**/*.ts",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.mjs"
  ]
}